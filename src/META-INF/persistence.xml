<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="campeonatoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>campeonato.SRV.MODELOS.Etapa</class>
    <class>campeonato.SRV.MODELOS.Grupo</class>
    <class>campeonato.SRV.MODELOS.Campeonato</class>
    <class>campeonato.SRV.MODELOS.Jugador</class>
    <class>campeonato.SRV.MODELOS.GrupoEquipo</class>
    <class>campeonato.SRV.MODELOS.Equipo</class>
    <class>campeonato.SRV.MODELOS.Gol</class>
    <class>campeonato.SRV.MODELOS.Partido</class>
    <class>campeonato.SRV.MODELOS.Goleadores</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/campeonato?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
    </properties>
  </persistence-unit>
</persistence>
